doctype html
html
  head
    title title
    link(rel='shortcut icon', href='/assets/pictures/188favicon.png')
    link(rel='stylesheet', href='/assets/generated-css/stylesheet.css')
    //link(rel='import', href='views/robot.pug')
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    script(src='/javascripts/jquery-3.0.0.min.js')
    script(src='/javascripts/home.js')


  body.none.fill
        h2 Sign In:
            form.loginForm(method="POST", action=`/auth/login${nextPathURI}`)
                    input#name.bx--text-input(type='text', name='name', placeholder='Name', required)
                    if err && err.email
                        - emailErr = {'data-invalid': ''}
                    input#username.bx--text-input(type='email', name='email', placeholder='Email', required)&attributes(emailErr)
                    if err && err.password
                        - passwordErr = {'data-invalid': ''}
                    input#password.bx--text-input(type='password', name='password', placeholder='Password', required)&attributes(passwordErr)
                    //***dropdown to select either scout or strat
                    input.bx--btn.bx--btn--primary(type='submit', value='Register')
                    a(href="/auth/register") Create an account